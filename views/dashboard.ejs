                                <span class="badge ${isCompleted ? 'bg-success' : 'bg-info'}">
                                    ${progressPercentage.toFixed(1)}%
                                </span>
                            </div>
                            ${isCompleted ? '<small class="text-success d-block"><i class="fas fa-check-circle me-1"></i>Goal achieved!</small>' : ''}
                            <small class="text-muted d-block">
