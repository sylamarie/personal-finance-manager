                                <small class="text-muted">
                                    ${formatCurrency(budget.spentAmount)} / ${formatCurrency(budget.budgetAmount)}
                                </small>
                                <span class="badge bg-${progressColor}">
                                    ${progressPercentage.toFixed(1)}%
                                </span>
                            </div>
